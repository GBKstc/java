<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.demo.dao.UserDao" >
	<select id="findById" parameterType="Integer" resultType="User"> 
		SELECT * FROM `user` WHERE id=#{v}
	</select>
	
	<select id="findByName" parameterType="String" resultType="cn.demo.bean.User"> 
		SELECT * FROM `user` WHERE name like '%${value}%'
	</select>
	
	<insert id="add" parameterType="cn.demo.bean.User"> 
		<selectKey keyProperty="id" resultType="Integer" order="AFTER">
			select LAST_INSERT_ID()
		</selectKey>
		INSERT INTO `user` (name) VALUES(#{name})
	</insert>
	
	<update id="updateById" parameterType="cn.demo.bean.User">
		UPDATE `user` SET `name` = #{name} WHERE id = #{id}
	</update>
	
	<delete id="deleteById">
		DELETE FROM `user` WHERE id = #{id}
	</delete>
</mapper>
